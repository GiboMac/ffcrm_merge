.remote
  - remote_form_for(@contact, :html => one_submit_only(:contact)) do |f|
    = link_to_close edit_contact_path(@contact)
    = subtitle :merge_with, false, t(:merge_with)
    .section
      %small#merge_with_intro
        = t(:merge_info_small)
      #merge_with
        %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
          %tr
            %td{ :valign => :top }
              .label #{t :contact}:
              =# text_field :contact, :style => "width:240px"

    .buttonbar
      = f.submit t(:merge_contacts), :onclick => "crm.merge_contacts(); return false;"
      #{t :or}
      = link_to_cancel edit_contact_path(@contact)

