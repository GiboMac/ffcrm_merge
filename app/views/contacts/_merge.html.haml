- contact_merge_attributes = pretty_merge_attributes(@contact)
- master_merge_attributes  = pretty_merge_attributes(@master_contact)

.remote
  - remote_form_for(@contact, :url => merge_contact_path(@contact.id, @master_contact.id), :html => one_submit_only(:contact)) do |f|

    = link_to_close edit_contact_path(@contact)
    .subtitle{ :style => "width:95%; padding:3px;" }
      = t(:merge_contact_with_master, :contact => @contact.name, :master_contact => @master_contact.name)
    .section
      #merge_with
        %table{ :cellpadding => "3px", :style => "text-align:left; border-collapse: collapse; border: none;" }
          %tr
            %th
            %th{ :valign => :top, :style => "font-size: 13px;" }
              = "#{t(:duplicate_contact)}: #{@contact.name}"
            %th{ :valign => :top, :style => "font-size: 13px;" }
              = "#{t(:master_contact)}: #{@master_contact.name}"
            - contact_merge_attributes.each do |attribute, contact_value|
              %tr{ :style => "border-bottom:1px dotted silver;"}
                %th{ :width => "20%" }
                  .label #{attribute.humanize}
                %td
                  .label #{contact_value}
                %td
                  .label #{master_merge_attributes[attribute]}

    .buttonbar
      = f.submit t(:merge_contacts), :onclick => "crm.merge_contacts(); return false;"
      #{t :or}
      = link_to_cancel edit_contact_path(@contact)

